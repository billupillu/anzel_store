
<%p="padding-top:9px;border-left:3px solid #"%>
<% @body_id = 'product-details'%>

<% cache [I18n.locale, current_currency, @product, @product.possible_promotions] do %>
  <div data-hook="product_show" itemscope itemtype="https://schema.org/Product">
    <div class="col-md-5" data-hook="product_left_part"  id="color" >
      <div data-hook="product_left_part_wrap">
        <div id="product-images" data-hook="product_images">
          <div id="main-image" class="panel panel-default" data-hook>
            <div class="panel-body text-center">
              <%= render :partial => 'image' %>
            </div>
          </div>
          <div id="thumbnails" data-hook>
            <%= render :partial => 'thumbnails' %>
          </div>
        </div>

        <div data-hook="product_properties">
          <%= render :partial => 'properties' %>
        </div>

        <div data-hook="promotions">
          <%= render :partial => 'promotions' %>
        </div>
      </div>

            <div class="panel panel-default" style="<%=p%>6e5a59;background-color:#efeee2;">
              <div class="" style="padding-left:5%;">
                <p>Artist Name:&nbsp;<a href="<%=seo_url(@product.taxons.find_by(taxonomy_id: 2))%>"><%=@product.taxons.find_by(taxonomy_id: 2).name.capitalize%></p> </a><a href="<%=seo_url(@product.taxons.find_by(taxonomy_id: 2))%>"><p1 style="color:#726c61;">(click for more of <%=@product.taxons.find_by(taxonomy_id: 2).name%>)</p1></a>
              </div>

            </div>
            <div class="panel panel-default" style="<%=p%>6fc4a7;padding-bottom:1px;background-color:#efeee2;">
              <div class="" style="padding-left:5%;">
                  <p>Art Quality:&nbsp;<strong><%=@product.quality.strip%></strong></p>    
              </div>
            </div>

            <div class="panel panel-default" style="<%=p%>3ebcd2;background-color:#efeee2;">
              <div class="" style="padding-left:5%;">
                <p>Artist Name:&nbsp;<a href="<%=seo_url(@product.taxons.find_by(taxonomy_id: 5))%>"><%=@product.taxons.find_by(taxonomy_id: 5).name.capitalize%></p> </a><a href="<%=seo_url(@product.taxons.find_by(taxonomy_id: 5))%>"><p1 style="color:#726c61;">(click for more of <%=@product.taxons.find_by(taxonomy_id: 5).name%> artworks)</p1></a>
              </div>

            </div>

            <div class="panel panel-default" style="<%=p%>e61446;background-color:#efeee2;">
              <div class="" style="padding-left:5%;">
                <p>Authenticity Letter:&nbsp;
                  <%if @product.authenticity_letter%>
                    <strong>Yes, authenticity letter signed by the artist will be provided.</strong></p1>
                  <%else%>
                    <strong>No, authenticity letter available with this product.</strong></p1>
                  <%end%>
              </div>

            </div>

            <div class="panel panel-default" style="<%=p%>726c61;background-color:#efeee2;">
              <div class="" style="padding-left:5%;">
                <p>Art Theme:&nbsp;
                  
                    <strong><%=@product.taxons.find_by(taxonomy_id: 7).name%></strong></p1>
                  
              </div>

            </div>
    </div><!--col md 5 ends-->

    <div class="col-md-7" data-hook="product_right_part">
      <div data-hook="product_right_part_wrap">
        <div id="product-description" data-hook="product_description">
          <h3 class="product-title" itemprop="name" style="<%=p%>6477c9; padding-left:2.5%;"><%= @product.name.capitalize %></h3>
                            
            <div class="clearfix" style="margin-bottom:10px;<%=p%>6e5a59; padding-left:2.5%;">
                  <div class="ratings-container pull-left">
                    <div class="ratings">
                        <div class="ratings-result" data-result="80"></div>
                    </div><!-- End .ratings -->
                    <span class="ratings-amount">12 Review(s)</span><span class="separator">|</span>
                    <a href="#" class="add-rating">add review</a>
                </div><!-- End .rating-container -->
            </div>

          <div class="well" itemprop="description" data-hook="description" style="<%=p%>e61446; padding-left:2.5%;">
          <h5>Art Discription</h5>
            <%= product_description(@product) rescue Spree.t(:product_has_no_description) %>
          </div>

          <div id="cart-form" data-hook="cart_form" style="<%=p%>6477c9; padding-left:2.5%;">
            <%= render :partial => 'cart_form' %>
          </div>
            
            <div class="panel " style="<%=p%>6fc4a7;margin-top:10px;">
              <div class="panel-heading" style="padding-bottom:0px;">
                <h6>Check With Wall Color</h6>  
              </div>
              <div class="panel-body" style="padding-left:5%;"><div id="colorpicker" ></div></div>
            </div>
            <div class="panel " style="<%=p%>3ebcd2;">
              <div class="panel-heading" style="padding-bottom:0px;">
                <h6>Art Dimensions</h6>  
              </div>
              <div class="panel-body" style="padding-left:5%;">
                <%if @product.width.to_i > 0%>
                  <p>Width:&nbsp;<%=@product.width.to_i%> inch</p>
                <%end%>
                <%if @product.height.to_i > 0%>
                  <p>Height:&nbsp;<%=@product.height.to_i%> inch</p>
                <%end%>
                <%if @product.weight.to_i > 0%>
                  <p>Weight:&nbsp;<%=@product.weight.to_i%> ounces</p>
                <%end%>
                <%if @product.depth.to_i > 0%>
                  <p>Depth:&nbsp;<%=@product.depth.to_i%> inch</p>
                <%end%>
              </div>

            </div>

            <div class="panel " style="<%=p%>c477c9;">
              <div id="rp" class="panel-heading" style="padding-bottom:0px;">
                <h6 >Return Policy <span id="rph" class="glyphicon glyphicon-chevron-down" style="transform:all 0.4s ease;margin-left:4px;margin-top:8px;"></span></h6>  
              </div>
              <div id="rpc" class="panel-body" style="padding-left:5%;">
                <%Spree::ReturnPolicy.last.content.split("*").each do |k|%>
                  <p><%=k%></p>
                <%end%>
              </div>

            </div>

            
        </div>

        
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= render :partial => 'taxons' %>
    </div>
  </div>
<% end %>




<script type="text/javascript">

  $(document).ready(function() {

    $('#colorpicker').farbtastic('#color');
    

  });

</script>

<%=javascript_tag do%>
$('#new_wished_product button').addClass("productwishlist");
$('#rpc').hide();


$('#rp').on('click',function(){
 
if($(this).attr('data-click-state') == 1) {
$(this).attr('data-click-state', 0)
/*Change this to your own property / function - Click State 1*/
$('#rph').addClass('rotate');
$('#rpc').slideDown('slow');
/*Click State 1 finish*/
} else {
$(this).attr('data-click-state', 1)
/*Change this to your own property / function - Click State 2*/
$('#rph').removeClass('rotate');
$('#rpc').slideUp('slow');
/*Click State 2 finish*/
}
 
});
                
<%end%>

