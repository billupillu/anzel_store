<div data-hook="admin_adv_form_fields" class="row">
  <div class="col-md-6">
    <%= f.field_container :adv_h1, class: ['form-group'] do %>
      <%= f.label :adv_h1 %>
      <%= f.text_field :adv_h1, class: 'form-control' %>
      <%= error_message_on :adv, :adv_h1 %>
    <% end %>

    <%= f.field_container :adv_h2, class: ['form-group'] do %>
      <%= f.label :adv_h2 %>
      <%= f.text_field :adv_h2, class: 'form-control' %>
      <%= error_message_on :adv, :adv_h2 %>
    <% end %>

    <%= f.field_container :adv_url, class: ['form-group'] do %>
      <%= f.label :adv_url %>
      <%= f.text_field :adv_url, class: 'form-control' %>
      <%= error_message_on :adv, :adv_url %>
    <% end %>

    <%= f.field_container :adv_img, class: ['form-group'] do %>
      <%= f.label :adv_img %>
      <%= f.file_field :adv_img, class: 'form-control' %>
      <%= error_message_on :adv, :adv_img %>
    <% end %>

  </div>
</div>
