<% content_for :page_title do %>
  <%= Spree.t(:new_return_policy) %>
<% end %>

<div data-hook="admin_return_policy_new_form_header">
  <%= render 'spree/shared/error_messages', target: @return_policy %>
</div>

<div data-hook="admin_return_policy_new_form">
  <%= form_for [:admin, @return_policy] do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= render 'form', f: f %>
        <%= render 'spree/admin/shared/new_resource_links' %>
      </div>
    </div>
  <% end %>
</div>
