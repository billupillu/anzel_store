<% content_for :page_title do %>
  <%= Spree.t(:listing_third_slides) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_third_slide), new_object_url, class: 'btn-success', icon: 'add', id: 'admin_new_third_slide_link' %>
<% end if can?(:create, Spree::ThirdSlide) %>

<table class="table" id="listing_third_slides" data-hook>
  <thead>
    <tr data-hook="admin_third_slides_index_headers">
      <th><%= t(:h1, scope: 'activerecord.attributes.spree/third_slide') %></th>
      <th data-hook="admin_third_slides_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @third_slides.each do |third_slide| %>
      <tr id="<%= spree_dom_id third_slide %>" data-hook="admin_third_slides_index_rows" class="<%= cycle('odd', 'even')%>">
        <td><%= link_to third_slide.h1, edit_object_url(third_slide) %></td>
        <td><%=third_slide.h2%></td>
        <td><%=truncate(third_slide.p,length: 10)%></td>
        <td><%=truncate(third_slide.url,length: 10)%></td>
        <td><%=image_tag third_slide.item1_img(:thumb)%></td>
        <td><%=third_slide.price1%></td>
        <td><%=image_tag third_slide.item2_img(:thumb)%></td>
        <td><%=third_slide.price2%></td>
        <td data-hook="admin_third_slides_index_row_actions" class="actions text-right">
          <%= link_to_edit third_slide, no_text: true %>
          <%= link_to_delete third_slide, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @third_slides %>
