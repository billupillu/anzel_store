<div data-hook="admin_new_collection_form_fields" class="row">
  <div class="col-md-6">
    <%= f.field_container :new_collection_h1, class: ['form-group'] do %>
      <%= f.label :new_collection_h1 %>
      <%= f.text_field :new_collection_h1, class: 'form-control' %>
      <%= error_message_on :new_collection, :new_collection_h1 %>
    <% end %>

    <%= f.field_container :new_collection_h2, class: ['form-group'] do %>
      <%= f.label :new_collection_h2 %>
      <%= f.text_field :new_collection_h2, class: 'form-control' %>
      <%= error_message_on :new_collection, :new_collection_h2 %>
    <% end %>

    <%= f.field_container :new_collection_url, class: ['form-group'] do %>
      <%= f.label :new_collection_url %>
      <%= f.text_field :new_collection_url, class: 'form-control' %>
      <%= error_message_on :new_collection, :new_collection_url %>
    <% end %>

    <%= f.field_container :new_collection_img, class: ['form-group'] do %>
      <%= f.label :new_collection_img %>
      <%= f.file_field :new_collection_img, class: 'form-control' %>
      <%= error_message_on :new_collection, :new_collection_img %>
    <% end %>

  </div>
</div>
