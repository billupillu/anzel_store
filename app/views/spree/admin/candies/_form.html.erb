<div data-hook="admin_candy_form_fields" class="row">
  <div class="col-md-6">
    <%= f.field_container :candy_h1, class: ['form-group'] do %>
      <%= f.label :candy_h1 %>
      <%= f.text_field :candy_h1, class: 'form-control' %>
      <%= error_message_on :candy, :candy_h1 %>
    <% end %>

    <%= f.field_container :candy_h2, class: ['form-group'] do %>
      <%= f.label :candy_h2 %>
      <%= f.text_field :candy_h2, class: 'form-control' %>
      <%= error_message_on :candy, :candy_h2 %>
    <% end %>

    <%= f.field_container :candy_url, class: ['form-group'] do %>
      <%= f.label :candy_url %>
      <%= f.text_field :candy_url, class: 'form-control' %>
      <%= error_message_on :candy, :candy_url %>
    <% end %>

    <%= f.field_container :candy_img, class: ['form-group'] do %>
      <%= f.label :candy_img %>
      <%= f.file_field :candy_img, class: 'form-control' %>
      <%= error_message_on :candy, :candy_img %>
    <% end %>

  </div>
</div>
