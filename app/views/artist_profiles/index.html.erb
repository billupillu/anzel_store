<p id="notice"><%= notice %></p>

<h1>Listing Artist Profiles</h1>

<table>
  <thead>
    <tr>
      <th>A name</th>
      <th>A skills</th>
      <th>A top workshops</th>
      <th>A img</th>
      <th>A brief</th>
      <th>A xtra</th>
      <th>A dob</th>
      <th>A edu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artist_profiles.each do |artist_profile| %>
      <tr>
        <td><%= artist_profile.a_name %></td>
        <td><%= artist_profile.a_skills %></td>
        <td><%= artist_profile.a_top_workshops %></td>
        <td><%= image_tag artist_profile.a_img(:medium) %></td>
        <td><%= artist_profile.a_brief %></td>
        <td><%= artist_profile.a_xtra %></td>
        <td><%= artist_profile.a_dob %></td>
        <td><%= artist_profile.a_edu %></td>
        <td><%= link_to 'Show', artist_profile %></td>
        <td><%= link_to 'Edit', edit_artist_profile_path(artist_profile) %></td>
        <td><%= link_to 'Destroy', artist_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

