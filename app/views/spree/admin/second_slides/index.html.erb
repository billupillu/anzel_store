<% content_for :page_title do %>
  <%= Spree.t(:listing_second_slides) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_second_slide), new_object_url, class: 'btn-success', icon: 'add', id: 'admin_new_second_slide_link' %>
<% end if can?(:create, Spree::SecondSlide) %>

<table class="table" id="listing_second_slides" data-hook>
  <thead>
    <tr data-hook="admin_second_slides_index_headers">
      <th><%= t(:h1, scope: 'activerecord.attributes.spree/second_slide') %></th>
      <th data-hook="admin_second_slides_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @second_slides.each do |second_slide| %>
      <tr id="<%= spree_dom_id second_slide %>" data-hook="admin_second_slides_index_rows" class="<%= cycle('odd', 'even')%>">
        <td><%= link_to second_slide.h1, edit_object_url(second_slide) %></td>
        <td><%=second_slide.h2%></td>
        <td><%=truncate(second_slide.p,length: 10)%></td>
        <td><%=truncate(second_slide.url,length: 10)%></td>
        <td><%=image_tag second_slide.img(:thumb)%></td>
        <td data-hook="admin_second_slides_index_row_actions" class="actions text-right">
          <%= link_to_edit second_slide, no_text: true %>
          <%= link_to_delete second_slide, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @second_slides %>
